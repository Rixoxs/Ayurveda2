<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer"
    android:background="@android:color/transparent"
    tools:context=".SetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setupfoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/profilefoto"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/divider"/>

        <EditText
            android:id="@+id/setupfechanacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/setupfechanacimiento"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:autofillHints=""
            android:background="@drawable/fondocajatexto"
            android:hint="@string/setupfechanacimiento"
            android:inputType="date"
            android:padding="15dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/setupprovincia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/setupprovincia"
            android:layout_below="@id/setupprovincia"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/fondocajatexto"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:autofillHints=""
            android:inputType="text" />

        <EditText
            android:id="@+id/setuppais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/setuppais"
            android:layout_below="@id/setuppais"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/fondocajatexto"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:autofillHints=""
            android:inputType="text" />

        <EditText
            android:id="@+id/setupsexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/setupsexo"
            android:layout_below="@id/setupsexo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/fondocajatexto"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:autofillHints=""
            android:inputType="text" />

        <Button
            android:id="@+id/botongrabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/botongrabar"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/botongrabar"
            android:textSize="18sp"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>


